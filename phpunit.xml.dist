<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="src/bootstrap.php">
    <testsuites>
        <testsuite name="PHP Language Server Test Suite">
            <directory>./tests</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist>
            <directory>./src</directory>
        </whitelist>
    </filter>
    <php>
        <ini name="memory_limit" value="256M"/>
    </php>
</phpunit>

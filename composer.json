{
    "name": "felixfbecker/language-server",
    "description": "PHP Implementation of the Visual Studio Code Language Server Protocol",
    "authors": [
        {
            "name": "Felix Becker",
            "email": "felix.b@outlook.com"
        }
    ],
    "license": "ISC",
    "type": "library",
    "keywords": [
        "php",
        "language",
        "server",
        "microsoft",
        "visual",
        "studio",
        "code",
        "intellisense",
        "autocompletion",
        "refactor"
    ],
    "bin": ["bin/php-language-server.php"],
    "require": {
        "php": ">=7.0",
        "nikic/php-parser": "^3.0.0beta1",
        "phpdocumentor/reflection-docblock": "^3.0",
        "sabre/event": "^4.0",
        "felixfbecker/advanced-json-rpc": "^1.2"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "LanguageServer\\": "src/"
        },
        "files" : ["src/utils.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "LanguageServer\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "phpunit/php-code-coverage": "^4.0"
    }
}

{
    "name": "felixfbecker/language-server",
    "description": "PHP Implementation of the Visual Studio Code Language Server Protocol",
    "authors": [
        {
            "name": "Felix Becker",
            "email": "felix.b@outlook.com"
        }
    ],
    "license": "ISC",
    "type": "library",
    "keywords": [
        "php",
        "language",
        "server",
        "microsoft",
        "visual",
        "studio",
        "code",
        "intellisense",
        "autocompletion",
        "refactor"
    ],
    "bin": ["bin/php-language-server.php"],
    "require": {
        "php": ">=7.0",
        "nikic/php-parser": "dev-master#c0f0edf0441f0ddcff0604407b7600a40993faf2",
        "phpdocumentor/reflection-docblock": "^3.0",
        "sabre/event": "^5.0",
        "felixfbecker/advanced-json-rpc": "^2.0",
        "squizlabs/php_codesniffer" : "^2.7",
        "symfony/debug": "^3.1",
        "JetBrains/phpstorm-stubs": "dev-master"
    },
    "repositories": [
        {
            "type": "package",
            "package": {
                "name": "JetBrains/phpstorm-stubs",
                "version": "dev-master",
                "dist": {
                    "url": "https://github.com/JetBrains/phpstorm-stubs/archive/master.zip",
                    "type": "zip"
                },
                "source": {
                    "url": "https://github.com/JetBrains/phpstorm-stubs",
                    "type": "git",
                    "reference": "master"
                }
            }
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "LanguageServer\\": "src/"
        },
        "files" : [
            "src/utils.php",
            "src/Fqn.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "LanguageServer\\Tests\\": "tests/"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^5.5",
        "phpunit/php-code-coverage": "^4.0"
    }
}

{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "PHPUnit",
      "type": "php",
      "request": "launch",
      "program": "${workspaceRoot}/vendor/phpunit/phpunit/phpunit",
      // "args": ["--filter", "testDefinitionForSelfKeyword"],
      "cwd": "${workspaceRoot}"
    },
    {
      "name": "Listen for XDebug",
      "type": "php",
      "request": "launch",
      "port": 9000
    },
    {
      "name": "Launch currently open script",
      "type": "php",
      "request": "launch",
      "program": "${file}",
      "cwd": "${fileDirname}",
      "port": 9000
    }
  ]
}
